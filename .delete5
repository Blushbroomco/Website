<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Blush & Broom Co Cleaning</title>
  <meta name="description" content="Blush & Broom Co - professional residential cleaning. Book online, view pricing, contact us." />

  <style>
    *{box-sizing:border-box}
    html,body{height:100%;margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial;color:var(--txt);background:var(--bg)}

    :root{
      --bg: #fff7fb;
      --card-bg: #ffffff;
      --accent: #ff7eb6;
      --accent-2: #ffd6ea;
      --txt: #2b2b2b;
      --muted: #6b6b6b;
      --shadow: 0 8px 30px rgba(20,20,30,0.06);
      --radius:14px;
      --max-width:1100px;
    }

    body.western{
      --bg: linear-gradient(180deg,#fffaf1,#fff6ec);
      --card-bg: #fffdf7;
      --accent: #a65b2a;
      --accent-2: #f3e1c9;
      --txt: #2b2b2b;
      --muted: #6b5746;
      --shadow: 0 10px 30px rgba(40,30,12,0.06);
    }

    .wrap{max-width:var(--max-width);margin:34px auto;padding:20px}
    header{display:flex;align-items:center;justify-content:space-between;gap:16px}
    .brand{display:flex;align-items:center;gap:12px}
    .logo{width:72px;height:72px;border-radius:16px;background:linear-gradient(135deg,var(--accent),var(--accent-2));display:flex;align-items:center;justify-content:center;color:white;font-weight:700;box-shadow:var(--shadow)}
    .brand h1{margin:0;font-size:20px}
    .brand p{margin:0;color:var(--muted);font-size:13px}

    .controls{display:flex;gap:10px;align-items:center}
    .btn{background:var(--accent);color:white;border:0;padding:10px 14px;border-radius:10px;cursor:pointer;box-shadow:0 6px 18px rgba(0,0,0,0.08);font-weight:600}
    .btn.ghost{background:transparent;color:var(--accent);border:2px solid rgba(255,255,255,0.06);box-shadow:none}
    .btn.small{padding:8px 10px;font-size:14px}

    main{display:grid;grid-template-columns:1fr 360px;gap:20px;margin-top:20px}
    .hero{background:var(--card-bg);padding:22px;border-radius:var(--radius);box-shadow:var(--shadow)}
    .hero h2{margin:0 0 6px 0}
    .hero p{margin:0;color:var(--muted)}
    .features{display:flex;gap:12px;margin-top:16px}
    .feature{flex:1;padding:12px;border-radius:10px;background:linear-gradient(180deg,rgba(255,255,255,0.6),transparent);box-shadow:0 6px 20px rgba(0,0,0,0.03)}
    .feature h4{margin:0 0 6px 0}
    .muted{color:var(--muted)}
    .card{background:var(--card-bg);padding:18px;border-radius:var(--radius);box-shadow:var(--shadow)}
    .price-table{width:100%;border-collapse:collapse;margin-top:8px}
    .price-table th{text-align:left;padding:10px;border-bottom:1px dashed rgba(0,0,0,0.06);color:var(--muted)}
    .price-table td{padding:12px 10px}
    .price{font-weight:700;color:var(--accent)}
    .booking{position:sticky;top:20px}
    .booking .card{display:flex;flex-direction:column;gap:12px}
    .booking input, .booking select, .booking textarea{padding:10px;border-radius:8px;border:1px solid rgba(0,0,0,0.08);font-size:14px}
    .fade-in{animation:fadeIn 700ms ease both}
    @keyframes fadeIn{from{opacity:0;transform:translateY(8px)}to{opacity:1;transform:none}}
    .badge{display:inline-block;padding:6px 10px;border-radius:999px;background:var(--accent-2);color:var(--txt);font-weight:600}
    @media (max-width:900px){main{grid-template-columns:1fr}.booking{position:relative}}
    .decor{opacity:0.12;font-size:84px;position:absolute;right:18px;top:0;transform:rotate(-12deg);pointer-events:none}
    footer{margin-top:24px;text-align:center;color:var(--muted);font-size:13px}
    .modal{position:fixed;inset:0;display:flex;align-items:center;justify-content:center;background:rgba(0,0,0,0.38);opacity:0;pointer-events:none;transition:all 220ms ease}
    .modal.open{opacity:1;pointer-events:auto}
    .modal .sheet{background:var(--card-bg);padding:20px;border-radius:12px;max-width:480px;width:92%;box-shadow:0 20px 60px rgba(0,0,0,0.2)}
    .toggle-row{display:flex;gap:8px;align-items:center}
    .theme-toggle{background:transparent;border:1px solid rgba(0,0,0,0.06);padding:8px;border-radius:10px;cursor:pointer}
    a.link{color:var(--accent);text-decoration:none}
    .card:hover{transform:translateY(-3px);transition:transform 180ms ease}
  </style>
</head>
<body>
  <div class="wrap">
    <header>
      <div class="brand">
        <div class="logo">BB</div>
        <div>
          <h1>Blush & Broom Co</h1>
          <p class="muted">Home cleaning • friendly team • safe products</p>
        </div>
      </div>
      <div class="controls">
        <div class="toggle-row">
          <button id="themeBtn" class="theme-toggle small">Switch style</button>
        </div>
        <button id="bookBtn" class="btn">Book now</button>
      </div>
    </header>

    <main>
      <section>
        <div class="hero card fade-in">
          <h2>Professional cleaning that feels like home</h2>
          <p class="muted">Fast online booking • friendly vetted staff • eco-friendly options</p>
          <div class="features">
            <div class="feature">
              <h4>Local pros</h4>
              <p class="muted">Trusted teams in your neighborhood</p>
            </div>
            <div class="feature">
              <h4>Simple pricing</h4>
              <p class="muted">Transparent rates with no surprise fees</p>
            </div>
            <div class="feature">
              <h4>Safe products</h4>
              <p class="muted">Kid and pet friendly cleaning options</p>
            </div>
          </div>
          <div style="margin-top:18px;display:flex;gap:10px;align-items:center">
            <span class="badge">New client special 20% off</span>
            <span class="muted" style="margin-left:8px">Mention code: BLUSH20</span>
          </div>
        </div>

        <div style="margin-top:18px" class="card fade-in">
          <h3 style="margin-top:0">About our service</h3>
          <p class="muted">Blush & Broom Co provides regular, deep, and move-in/move-out cleaning. We offer add-ons like oven cleaning, inside-fridge, and pet hair removal.</p>
        </div>

        <div style="margin-top:18px" class="card fade-in">
          <h3 style="margin-top:0">Pricing</h3>
          <table class="price-table" aria-label="Pricing table">
            <thead>
              <tr><th>Service</th><th>Details</th><th>Price</th></tr>
            </thead>
            <tbody>
              <tr><td><strong>Standard Clean</strong></td><td class="muted">Under 1,000 sq ft — weekly or biweekly</td><td class="price">$90</td></tr>
              <tr><td><strong>Standard Clean</strong></td><td class="muted">1,000–2,000 sq ft</td><td class="price">$125</td></tr>
              <tr><td><strong>Deep Clean</strong></td><td class="muted">Detailed deep cleaning — kitchens, bathrooms, baseboards</td><td class="price">$225</td></tr>
              <tr><td><strong>Move-out / Move-in</strong></td><td class="muted">Full-service cleaning to prep a home</td><td class="price">$275+</td></tr>
            </tbody>
          </table>
          <p class="muted" style="margin-top:12px">Add-ons: oven interior $35 • inside-fridge $30 • interior-windows $25</p>
        </div>
      </section>

      <aside class="booking">
        <div class="card fade-in">
          <h3 style="margin-top:0">Quick book</h3>
          <label class="muted">Service</label>
          <select id="serviceSel">
            <option value="standard-small">Standard — under 1,000 sq ft ($90)</option>
            <option value="standard-large">Standard — 1,000–2,000 sq ft ($125)</option>
            <option value="deep">Deep clean ($225)</option>
            <option value="move">Move in/out ($275+)</option>
          </select>

          <label class="muted">Your name</label>
          <input id="name" placeholder="First and last" />

          <label class="muted">Phone or email</label>
          <input id="contact" placeholder="Phone or email" />

          <label class="muted">Notes (address, date/time)</label>
          <textarea id="notes" rows="3" placeholder="Optional: best days, access instructions"></textarea>

          <button id="submitBooking" class="btn">Request booking</button>
          <p class="muted" style="font-size:13px;margin:0">Or call/text: <a class="link" href="tel:469271675">469-271-675</a> • Email: <a class="link" href="mailto:chelsea@blushbroomco.com">chelsea@blushbroomco.com</a> | <a class="link" href="mailto:stephanie@blushbroomco.com">stephanie@blushbroomco.com</a></p>
        </div>

        <div style="margin-top:12px" class="card fade-in">
          <h4 style="margin-top:0">Payment</h4>
          <p class="muted">We accept card payments, Venmo, and cash. For recurring service we'll send an invoice.</p>
        </div>
      </aside>
    </main>

    <footer>
      <div class="muted">© <span id="year"></span> Blush & Broom Co • Licensed & insured</div>
    </footer>
  </div>

  <div id="modal" class="modal" role="dialog" aria-hidden="true">
    <div class="sheet">
      <h3 id="modalTitle">Booking request sent</h3>
      <p id="modalMsg" class="muted">Thanks! we received your request. We'll contact you within 24 hours to confirm.</p>
      <div style="display:flex;justify-content:flex-end;margin-top:12px">
        <button id="closeModal" class="btn small">Close</button>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('year').textContent = new Date().getFullYear();
    const body = document.body;
    const themeBtn = document.getElementById('themeBtn');
    const bookBtn = document.getElementById('bookBtn');
    const submitBooking = document.getElementById('submitBooking');
    const modal = document.getElementById('modal');
    const closeModal = document.getElementById('closeModal');

    function isWestern(){return localStorage.getItem('theme') === 'western'}
    function applyTheme(){if(isWestern()) body.classList.add('western'); else body.classList.remove('western');
      themeBtn.textContent = isWestern() ? 'Switch to girly' : 'Switch to western';}
    themeBtn.addEventListener('click',()=>{localStorage.setItem('theme', isWestern() ? 'girly' : 'western');applyTheme();});
    if(!localStorage.getItem('theme')) localStorage.setItem('theme','girly'); applyTheme();

    bookBtn.addEventListener('click',()=>{
      const bookingEl = document.querySelector('.booking');
      if(window.innerWidth < 900){ bookingEl.scrollIntoView({behavior:'smooth'}); return; }
      modal.classList.add('open');
      modal.setAttribute('aria-hidden','false');
    });
    closeModal.addEventListener('click',()=>{ modal.classList.remove('open'); modal.setAttribute('aria-hidden','true'); });

    submitBooking.addEventListener('click',()=>{
      const name = document.getElementById('name').value.trim();
      const contact = document.getElementById('contact').value.trim();
      if(!name || !contact){ alert('Please enter your name and contact so we can confirm the booking.'); return; }
      const service = document.getElementById('serviceSel').value;
      const notes = document.getElementById('notes').value.trim();
      const subject = encodeURIComponent('Cleaning request from ' + name);
      const bodyText = encodeURIComponent('Service: ' + service + '\nName: ' + name + '\nContact: ' + contact + '\nNotes: ' + notes);
      window.location.href = 'mailto:chelsea@blushbroomco.com,stephanie@blushbroomco.com?subject=' + subject + '&body=' + bodyText;
      modal.classList.add('open');
      modal.setAttribute('aria-hidden','false');
      setTimeout(()=>{ document.getElementById('name').value=''; document.getElementById('contact').value=''; document.getElementById('notes').value=''; },1200);
    });
    modal.addEventListener('click', (e)=>{ if(e.target === modal) closeModal.click(); });
  </script>
</body>
</html>

